{
  "env": {
    "browser": true,
    "node": true
  },

  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "rules": {
    "indent": [1, 2, {"SwitchCase": 1}],
    "quotes": [1, "single"],
    "semi": [2, "never"],
    "keyword-spacing": [2],
    "space-infix-ops": [2],
    "comma-spacing": [2],

    "jsx-quotes": [1, "prefer-single"],

    "no-console": 0,

    "react/prop-types": 0
  }
}
